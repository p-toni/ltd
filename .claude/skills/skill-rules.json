{
  "version": "1.0",
  "description": "Skill activation triggers for te-blog. Keeps Claude Code aware of when to load meta-development, deployment, and content management guidance.",
  "skills": {
    "tactical-blog-content": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "description": "Comprehensive guidance for managing content, components, AI integration, and design in the Tactical Blog",
      "promptTriggers": {
        "keywords": [
          "blog post",
          "blog piece",
          "markdown",
          "frontmatter",
          "content management",
          "teenage.engineering",
          "tactical blog",
          "ai chat",
          "embeddings",
          "fragment",
          "mood",
          "piece",
          "radix ui",
          "component design",
          "blog component",
          "theme",
          "responsive design",
          "tailwind"
        ],
        "intentPatterns": [
          "(create|add|write).*?(blog|post|piece)",
          "(design|style).*?(component|blog|ui)",
          "(how to|how do).*?(blog|content|markdown)",
          "(fix|debug).*?(content|frontmatter|blog)",
          "(ai|chat|embedding).*?(integration|setup|problem)",
          "teenage.engineering.*?(design|aesthetic|style)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "content/pieces/*.md",
          "lib/pieces.ts",
          "components/tactical-blog*.tsx",
          "components/theme-provider.tsx",
          "app/pieces/**/*",
          "scripts/embed-pieces.ts",
          "app/api/chat/**/*"
        ],
        "contentPatterns": [
          "frontmatter",
          "export interface Piece",
          "export interface PieceFragment",
          "teenage.engineering",
          "TacticalBlog",
          "getPieces",
          "mood:",
          "excerpt:",
          "react-markdown",
          "embeddings",
          "fragments"
        ]
      }
    },
    "skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Meta-skill for creating and managing Claude Code skills",
      "promptTriggers": {
        "keywords": [
          "skill system",
          "create skill",
          "add skill",
          "skill triggers",
          "skill rules",
          "hook system",
          "skill development",
          "skill-rules.json",
          "claude skill"
        ],
        "intentPatterns": [
          "(how do|how does|explain).*?skill",
          "(create|add|modify|build).*?skill",
          "skill.*?(work|trigger|activate|system)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          ".claude/**/*.md",
          ".claude/**/*.json",
          ".claude/hooks/**/*",
          ".claude/skills/**/*"
        ],
        "contentPatterns": [
          "skill-rules",
          "UserPromptSubmit",
          "PreToolUse",
          "progressive disclosure"
        ]
      }
    },
    "deployment-build": {
      "type": "guardrail",
      "enforcement": "block",
      "priority": "high",
      "description": "Guides lint/test/build/deploy flows for te-blog's Next.js stack",
      "blockMessage": "⚠️ Deployment-critical change detected in {file_path}\\n\\nUse Skill tool: `deployment-build` before editing build/deploy files. Load the skill, review the checklist, and then retry this edit.",
      "promptTriggers": {
        "keywords": [
          "deploy",
          "deployment",
          "build pipeline",
          "next build",
          "vercel",
          "ci/cd",
          "release plan",
          "lint errors",
          "vitest",
          "pnpm install",
          "artifact"
        ],
        "intentPatterns": [
          "(deploy|ship|release).*",
          "(fix|debug).*?(build|deploy)",
          "(prepare|plan).*?(release|deployment)",
          "(set up|configure).*?(CI|pipeline|vercel)",
          "(run|rerun).*?(lint|test|build)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "next.config.mjs",
          "package.json",
          "pnpm-lock.yaml",
          "scripts/**/*",
          "scripts/**/build*.ts",
          "scripts/**/deploy*.ts",
          "vitest.config.ts",
          "postcss.config.mjs",
          ".github/workflows/**/*",
          "Dockerfile",
          "docs/deployment*.md"
        ],
        "contentPatterns": [
          "pnpm build",
          "pnpm lint",
          "vitest",
          "VERCEL",
          "NEXT_PUBLIC_",
          "next start",
          "artifact",
          "CI=",
          "node-version"
        ]
      }
    }
  }
}
